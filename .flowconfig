[libs]
flow-typed/
flow-decl/

[ignore]
<PROJECT_ROOT>/node_modules/apollo-codegen/node_modules/graphql/.*
<PROJECT_ROOT>/node_modules/emotion/src/.*
<PROJECT_ROOT>/storybook-static/.*

# Doesn't support 0.53
<PROJECT_ROOT>/node_modules/radium/.*

[options]
module.file_ext=.graphql
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=.html
module.ignore_non_literal_requires=true
esproposal.decorators=ignore
unsafe.enable_getters_and_setters=true
